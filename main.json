{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.36.177.2456",
      "templateHash": "10260077145627152658"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "canadaeast",
      "metadata": {
        "description": "Azure region"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the VMs"
      }
    },
    "budgetAmount": {
      "type": "int",
      "defaultValue": 20,
      "metadata": {
        "description": "Monthly budget in USD"
      }
    },
    "budgetStartDate": {
      "type": "string",
      "defaultValue": "[utcNow('yyyy-MM-01')]",
      "metadata": {
        "description": "Start date for the budget (first day of current month)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "watchdog-rg",
      "location": "[parameters('location')]",
      "tags": {
        "env": "dev",
        "owner": "abdullah"
      }
    },
    {
      "type": "Microsoft.Consumption/budgets",
      "apiVersion": "2021-10-01",
      "name": "watchdog-budget",
      "properties": {
        "amount": "[parameters('budgetAmount')]",
        "category": "Cost",
        "timeGrain": "Monthly",
        "timePeriod": {
          "startDate": "[parameters('budgetStartDate')]"
        },
        "notifications": {
          "threshold80": {
            "enabled": true,
            "operator": "GreaterThan",
            "threshold": 80,
            "thresholdType": "Percentage",
            "contactEmails": [
              "abdullahakhund@gmail.com"
            ],
            "contactGroups": [
              "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, 'watchdog-rg'), 'Microsoft.Resources/deployments', 'core'), '2022-09-01').outputs.actionGroupId.value]"
            ]
          }
        }
      },
      "dependsOn": [
        "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, 'watchdog-rg'), 'Microsoft.Resources/deployments', 'core')]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "core",
      "resourceGroup": "watchdog-rg",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.36.177.2456",
              "templateHash": "6946540113802166059"
            }
          },
          "parameters": {
            "location": {
              "type": "string",
              "metadata": {
                "description": "Deployment region"
              }
            },
            "adminPassword": {
              "type": "securestring",
              "metadata": {
                "description": "Admin password for the VMs"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/locks",
              "apiVersion": "2016-09-01",
              "name": "rg-readonly",
              "properties": {
                "level": "CanNotDelete",
                "notes": "Prevent accidental deletes"
              }
            },
            {
              "type": "Microsoft.OperationalInsights/workspaces",
              "apiVersion": "2021-06-01",
              "name": "watchdog-law",
              "location": "[parameters('location')]",
              "properties": {
                "sku": {
                  "name": "PerGB2018"
                },
                "retentionInDays": 30
              }
            },
            {
              "type": "Microsoft.Resources/deployments",
              "apiVersion": "2022-09-01",
              "name": "network",
              "properties": {
                "expressionEvaluationOptions": {
                  "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                  "location": {
                    "value": "[parameters('location')]"
                  }
                },
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "metadata": {
                    "_generator": {
                      "name": "bicep",
                      "version": "0.36.177.2456",
                      "templateHash": "17096026971422126864"
                    }
                  },
                  "parameters": {
                    "location": {
                      "type": "string"
                    }
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Network/virtualNetworks",
                      "apiVersion": "2022-07-01",
                      "name": "watchdog-vnet",
                      "location": "[parameters('location')]",
                      "properties": {
                        "addressSpace": {
                          "addressPrefixes": [
                            "10.10.0.0/16"
                          ]
                        },
                        "subnets": [
                          {
                            "name": "default",
                            "properties": {
                              "addressPrefix": "10.10.1.0/24"
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            },
            {
              "type": "Microsoft.Resources/deployments",
              "apiVersion": "2022-09-01",
              "name": "vms",
              "properties": {
                "expressionEvaluationOptions": {
                  "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                  "location": {
                    "value": "[parameters('location')]"
                  },
                  "logAnalyticsWorkspaceId": {
                    "value": "[resourceId('Microsoft.OperationalInsights/workspaces', 'watchdog-law')]"
                  },
                  "adminPassword": {
                    "value": "[parameters('adminPassword')]"
                  }
                },
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "metadata": {
                    "_generator": {
                      "name": "bicep",
                      "version": "0.36.177.2456",
                      "templateHash": "18156560492809813786"
                    }
                  },
                  "parameters": {
                    "location": {
                      "type": "string",
                      "metadata": {
                        "description": "Deployment region"
                      }
                    },
                    "logAnalyticsWorkspaceId": {
                      "type": "string",
                      "metadata": {
                        "description": "Log Analytics workspace ID"
                      }
                    },
                    "adminUsername": {
                      "type": "string",
                      "defaultValue": "azureuser",
                      "metadata": {
                        "description": "Admin username for the VMs"
                      }
                    },
                    "adminPassword": {
                      "type": "securestring",
                      "metadata": {
                        "description": "Admin password for the VMs"
                      }
                    }
                  },
                  "resources": [
                    {
                      "copy": {
                        "name": "nic",
                        "count": "[length(range(0, 2))]"
                      },
                      "type": "Microsoft.Network/networkInterfaces",
                      "apiVersion": "2022-11-01",
                      "name": "[format('watchdog-nic{0}', range(0, 2)[copyIndex()])]",
                      "location": "[parameters('location')]",
                      "properties": {
                        "ipConfigurations": [
                          {
                            "name": "ipconfig1",
                            "properties": {
                              "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'watchdog-vnet', 'default')]"
                              },
                              "privateIPAllocationMethod": "Dynamic"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "copy": {
                        "name": "vm",
                        "count": "[length(range(0, 2))]"
                      },
                      "type": "Microsoft.Compute/virtualMachines",
                      "apiVersion": "2023-03-01",
                      "name": "[format('watchdog-vm{0}', range(0, 2)[copyIndex()])]",
                      "location": "[parameters('location')]",
                      "properties": {
                        "hardwareProfile": {
                          "vmSize": "Standard_B1s"
                        },
                        "osProfile": {
                          "computerName": "[format('watchdog{0}', range(0, 2)[copyIndex()])]",
                          "adminUsername": "[parameters('adminUsername')]",
                          "adminPassword": "[parameters('adminPassword')]"
                        },
                        "storageProfile": {
                          "imageReference": {
                            "publisher": "MicrosoftWindowsServer",
                            "offer": "WindowsServer",
                            "sku": "2019-Datacenter",
                            "version": "latest"
                          },
                          "osDisk": {
                            "createOption": "FromImage"
                          }
                        },
                        "networkProfile": {
                          "networkInterfaces": [
                            {
                              "id": "[resourceId('Microsoft.Network/networkInterfaces', format('watchdog-nic{0}', range(0, 2)[range(0, 2)[copyIndex()]]))]"
                            }
                          ]
                        },
                        "diagnosticsProfile": {
                          "bootDiagnostics": {
                            "enabled": true
                          }
                        }
                      },
                      "dependsOn": [
                        "[resourceId('Microsoft.Network/networkInterfaces', format('watchdog-nic{0}', range(0, 2)[range(0, 2)[copyIndex()]]))]"
                      ]
                    },
                    {
                      "copy": {
                        "name": "laExt",
                        "count": "[length(range(0, 2))]"
                      },
                      "type": "Microsoft.Compute/virtualMachines/extensions",
                      "apiVersion": "2023-03-01",
                      "name": "[format('{0}/{1}', format('watchdog-vm{0}', range(0, 2)[range(0, 2)[copyIndex()]]), 'AzureMonitorWindowsAgent')]",
                      "location": "[parameters('location')]",
                      "properties": {
                        "publisher": "Microsoft.Azure.Monitor",
                        "type": "AzureMonitorWindowsAgent",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                          "workspaceId": "[parameters('logAnalyticsWorkspaceId')]"
                        }
                      },
                      "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', format('watchdog-vm{0}', range(0, 2)[range(0, 2)[copyIndex()]]))]"
                      ]
                    }
                  ]
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', 'watchdog-law')]"
              ]
            },
            {
              "type": "Microsoft.Resources/deployments",
              "apiVersion": "2022-09-01",
              "name": "alerts",
              "properties": {
                "expressionEvaluationOptions": {
                  "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                  "location": {
                    "value": "[parameters('location')]"
                  },
                  "actionGroupLocation": {
                    "value": "global"
                  },
                  "alertRuleLocation": {
                    "value": "eastus"
                  },
                  "notificationEmail": {
                    "value": "abdullahakhund@gmail.com"
                  },
                  "teamsWebhookUri": {
                    "value": ""
                  },
                  "logAnalyticsWorkspaceId": {
                    "value": "[resourceId('Microsoft.OperationalInsights/workspaces', 'watchdog-law')]"
                  }
                },
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "metadata": {
                    "_generator": {
                      "name": "bicep",
                      "version": "0.36.177.2456",
                      "templateHash": "5068296117079119767"
                    }
                  },
                  "parameters": {
                    "location": {
                      "type": "string",
                      "metadata": {
                        "description": "Deployment region"
                      }
                    },
                    "notificationEmail": {
                      "type": "string",
                      "metadata": {
                        "description": "E-mail address for all alerts"
                      }
                    },
                    "teamsWebhookUri": {
                      "type": "string",
                      "defaultValue": "",
                      "metadata": {
                        "description": "Teams/Slack webhook URI (leave \"\" to skip)"
                      }
                    },
                    "logAnalyticsWorkspaceId": {
                      "type": "string",
                      "defaultValue": "",
                      "metadata": {
                        "description": "(Optional) Log Analytics workspace ID for heartbeat alert"
                      }
                    },
                    "actionGroupLocation": {
                      "type": "string",
                      "defaultValue": "global",
                      "metadata": {
                        "description": "Region for Action Group"
                      }
                    },
                    "alertRuleLocation": {
                      "type": "string",
                      "defaultValue": "eastus",
                      "metadata": {
                        "description": "Region for alert rules (must be in the allowed list)"
                      }
                    }
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Insights/actionGroups",
                      "apiVersion": "2023-01-01",
                      "name": "watchdog-ag",
                      "location": "[parameters('actionGroupLocation')]",
                      "properties": {
                        "groupShortName": "watchdog",
                        "enabled": true,
                        "emailReceivers": [
                          {
                            "name": "PrimaryEmail",
                            "emailAddress": "[parameters('notificationEmail')]"
                          }
                        ],
                        "webhookReceivers": "[if(empty(parameters('teamsWebhookUri')), createArray(), createArray(createObject('name', 'TeamsHook', 'serviceUri', parameters('teamsWebhookUri'), 'useCommonAlertSchema', true())))]"
                      }
                    },
                    {
                      "condition": "[not(empty(parameters('logAnalyticsWorkspaceId')))]",
                      "type": "Microsoft.Insights/scheduledQueryRules",
                      "apiVersion": "2022-08-01-preview",
                      "name": "watchdog-heartbeat-missing",
                      "location": "[parameters('alertRuleLocation')]",
                      "properties": {
                        "enabled": true,
                        "description": "Alert if any VM stops sending heartbeat for 5 minutes",
                        "severity": 2,
                        "evaluationFrequency": "PT5M",
                        "windowSize": "PT5M",
                        "scopes": [
                          "[parameters('logAnalyticsWorkspaceId')]"
                        ],
                        "criteria": {
                          "allOf": [
                            {
                              "query": "            Heartbeat\r\n            | summarize LastSeen=max(TimeGenerated) by Computer\r\n            | where LastSeen < ago(5m)\r\n          ",
                              "timeAggregation": "Count",
                              "threshold": 0,
                              "operator": "GreaterThan",
                              "failingPeriods": {
                                "numberOfEvaluationPeriods": 1,
                                "minFailingPeriodsToAlert": 1
                              }
                            }
                          ]
                        },
                        "actions": {
                          "actionGroups": [
                            "[resourceId('Microsoft.Insights/actionGroups', 'watchdog-ag')]"
                          ]
                        }
                      },
                      "dependsOn": [
                        "[resourceId('Microsoft.Insights/actionGroups', 'watchdog-ag')]"
                      ]
                    }
                  ],
                  "outputs": {
                    "actionGroupId": {
                      "type": "string",
                      "value": "[resourceId('Microsoft.Insights/actionGroups', 'watchdog-ag')]"
                    }
                  }
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', 'watchdog-law')]"
              ]
            }
          ],
          "outputs": {
            "actionGroupId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.Resources/deployments', 'alerts'), '2022-09-01').outputs.actionGroupId.value]"
            }
          }
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', 'watchdog-rg')]"
      ]
    }
  ]
}