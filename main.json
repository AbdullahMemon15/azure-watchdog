{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.36.177.2456",
      "templateHash": "10806840343371080418"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "canadaeast",
      "metadata": {
        "description": "Azure region"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the VMs"
      }
    },
    "budgetAmount": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
        "description": "Monthly budget (USD)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "watchdog-rg",
      "location": "[parameters('location')]",
      "tags": {
        "env": "dev",
        "owner": "abdullah"
      }
    },
    {
      "type": "Microsoft.Consumption/budgets",
      "apiVersion": "2021-10-01",
      "name": "watchdog-budget",
      "properties": {
        "category": "Cost",
        "amount": "[parameters('budgetAmount')]",
        "timeGrain": "Monthly",
        "timePeriod": {
          "startDate": "2025-07-15"
        },
        "notifications": {
          "threshold80": {
            "enabled": true,
            "operator": "GreaterThan",
            "threshold": 80,
            "thresholdType": "Percentage",
            "contactEmails": [
              "you@example.com"
            ]
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "core",
      "resourceGroup": "watchdog-rg",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.36.177.2456",
              "templateHash": "8920571268459907750"
            }
          },
          "parameters": {
            "location": {
              "type": "string",
              "metadata": {
                "description": "Deployment region"
              }
            },
            "adminPassword": {
              "type": "securestring",
              "metadata": {
                "description": "Admin password for the VMs"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Authorization/locks",
              "apiVersion": "2016-09-01",
              "name": "rg-readonly",
              "properties": {
                "level": "CanNotDelete",
                "notes": "Prevent accidental deletes"
              }
            },
            {
              "type": "Microsoft.OperationalInsights/workspaces",
              "apiVersion": "2021-06-01",
              "name": "watchdog-law",
              "location": "[parameters('location')]",
              "properties": {
                "sku": {
                  "name": "PerGB2018"
                },
                "retentionInDays": 30
              }
            },
            {
              "type": "Microsoft.Resources/deployments",
              "apiVersion": "2022-09-01",
              "name": "network",
              "properties": {
                "expressionEvaluationOptions": {
                  "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                  "location": {
                    "value": "[parameters('location')]"
                  }
                },
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "metadata": {
                    "_generator": {
                      "name": "bicep",
                      "version": "0.36.177.2456",
                      "templateHash": "15283395897222201993"
                    }
                  },
                  "parameters": {
                    "location": {
                      "type": "string"
                    }
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Network/virtualNetworks",
                      "apiVersion": "2023-05-01",
                      "name": "watchdog-vnet",
                      "location": "[parameters('location')]",
                      "properties": {
                        "addressSpace": {
                          "addressPrefixes": [
                            "10.10.0.0/16"
                          ]
                        },
                        "subnets": [
                          {
                            "name": "default",
                            "properties": {
                              "addressPrefix": "10.10.1.0/24"
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            },
            {
              "type": "Microsoft.Resources/deployments",
              "apiVersion": "2022-09-01",
              "name": "vms",
              "properties": {
                "expressionEvaluationOptions": {
                  "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                  "location": {
                    "value": "[parameters('location')]"
                  },
                  "logAnalyticsWorkspaceId": {
                    "value": "[resourceId('Microsoft.OperationalInsights/workspaces', 'watchdog-law')]"
                  },
                  "adminPassword": {
                    "value": "[parameters('adminPassword')]"
                  }
                },
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "metadata": {
                    "_generator": {
                      "name": "bicep",
                      "version": "0.36.177.2456",
                      "templateHash": "15781070297558481297"
                    }
                  },
                  "parameters": {
                    "location": {
                      "type": "string",
                      "metadata": {
                        "description": "Deployment region"
                      }
                    },
                    "logAnalyticsWorkspaceId": {
                      "type": "string",
                      "metadata": {
                        "description": "Log Analytics workspace ID"
                      }
                    },
                    "adminUsername": {
                      "type": "string",
                      "defaultValue": "azureuser",
                      "metadata": {
                        "description": "Admin username for the VMs"
                      }
                    },
                    "adminPassword": {
                      "type": "securestring",
                      "metadata": {
                        "description": "Admin password for the VMs"
                      }
                    }
                  },
                  "resources": [
                    {
                      "copy": {
                        "name": "nic",
                        "count": "[length(range(0, 2))]"
                      },
                      "type": "Microsoft.Network/networkInterfaces",
                      "apiVersion": "2023-05-01",
                      "name": "[format('watchdog-nic{0}', range(0, 2)[copyIndex()])]",
                      "location": "[parameters('location')]",
                      "properties": {
                        "ipConfigurations": [
                          {
                            "name": "ipconfig1",
                            "properties": {
                              "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'watchdog-vnet', 'default')]"
                              },
                              "privateIPAllocationMethod": "Dynamic"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "copy": {
                        "name": "vm",
                        "count": "[length(range(0, 2))]"
                      },
                      "type": "Microsoft.Compute/virtualMachines",
                      "apiVersion": "2023-03-01",
                      "name": "[format('watchdog-vm{0}', range(0, 2)[copyIndex()])]",
                      "location": "[parameters('location')]",
                      "properties": {
                        "hardwareProfile": {
                          "vmSize": "Standard_B1s"
                        },
                        "osProfile": {
                          "computerName": "[format('watchdog{0}', range(0, 2)[copyIndex()])]",
                          "adminUsername": "[parameters('adminUsername')]",
                          "adminPassword": "[parameters('adminPassword')]"
                        },
                        "storageProfile": {
                          "imageReference": {
                            "publisher": "MicrosoftWindowsServer",
                            "offer": "WindowsServer",
                            "sku": "2019-Datacenter",
                            "version": "latest"
                          },
                          "osDisk": {
                            "createOption": "FromImage"
                          }
                        },
                        "networkProfile": {
                          "networkInterfaces": [
                            {
                              "id": "[resourceId('Microsoft.Network/networkInterfaces', format('watchdog-nic{0}', range(0, 2)[range(0, 2)[copyIndex()]]))]"
                            }
                          ]
                        },
                        "diagnosticsProfile": {
                          "bootDiagnostics": {
                            "enabled": true
                          }
                        }
                      },
                      "dependsOn": [
                        "[resourceId('Microsoft.Network/networkInterfaces', format('watchdog-nic{0}', range(0, 2)[range(0, 2)[copyIndex()]]))]"
                      ]
                    },
                    {
                      "copy": {
                        "name": "laExt",
                        "count": "[length(range(0, 2))]"
                      },
                      "type": "Microsoft.Compute/virtualMachines/extensions",
                      "apiVersion": "2023-03-01",
                      "name": "[format('{0}/{1}', format('watchdog-vm{0}', range(0, 2)[range(0, 2)[copyIndex()]]), format('OmsAgentForWindows{0}', range(0, 2)[copyIndex()]))]",
                      "location": "[parameters('location')]",
                      "properties": {
                        "publisher": "Microsoft.Azure.Monitor",
                        "type": "OmsAgentForWindows",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                          "workspaceId": "[parameters('logAnalyticsWorkspaceId')]"
                        }
                      },
                      "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', format('watchdog-vm{0}', range(0, 2)[range(0, 2)[copyIndex()]]))]"
                      ]
                    }
                  ]
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', 'watchdog-law')]"
              ]
            }
          ]
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', 'watchdog-rg')]"
      ]
    }
  ]
}